<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Activities - Momentum Fitness</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background-color: #E3F2E6;
            font-family: Arial, sans-serif;
        }
        .header {
            background-color: #DCEAD6;
            padding: 15px;
        }
        .category-btns .btn {
            margin-right: 10px;
            font-size: 14px;
            transition: 0.3s ease-in-out;
        }
        .category-btns .btn:hover {
            transform: scale(1.1);
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }
        .workout-card {
            border-radius: 10px;
            padding: 15px;
            color: white;
            margin-bottom: 15px;
        }
        .progress {
            height: 20px;
            font-size: 14px;
        }
        .progress-bar {
            font-weight: bold;
        }
        .bg-purple { background-color: #8561C5; }
        .bg-orange { background-color: #E69C5B; }
        .bg-green { background-color: #6FA46F; }
        .bg-red { background-color: #E65B5B; }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header d-flex justify-content-between align-items-center">
        <h1 class="h3 text-success mb-0 ps-3">MOMENTUM</h1>
        <nav>
            <a href="/" class="btn btn-link">Home</a>
            <a href="/activities" class="btn btn-link">Activities</a>
            <a href="/nutrition" class="btn btn-link">Nutrition</a>
            <a href="/communities" class="btn btn-link">Communities</a>
            <a href="/logout" class="btn btn-outline-danger">Logout</a>
        </nav>
    </header>
    
    <main class="container py-4">
        <h2 class="mb-3 text-5xl font-bold">Activities</h2>

        <!-- Featured Highlights with Bootstrap Carousel -->
        <div id="featuresCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/img3.jpg" class="d-block w-100" alt="Feature 1">
                    <div class="carousel-caption">
                        <h3>Stay fit at home without hassle</h3>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/img5.jpg" class="d-block w-100" alt="Feature 2">
                    <div class="carousel-caption">
                        <h3>Join Workout Plans</h3>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/img6.jpg" class="d-block w-100" alt="Feature 3">
                    <div class="carousel-caption">
                        <h3>Muscle building exercises</h3>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/img4.jpg" class="d-block w-100" alt="Feature 2">
                    <div class="carousel-caption">
                        <h3>Relaxing and easy yoga</h3>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/img8.jpg" class="d-block w-100" alt="Feature 2">
                    <div class="carousel-caption">
                        <h3>Track your progess easily</h3>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/images/img9.jpg" class="d-block w-100" alt="Feature 2">
                    <div class="carousel-caption">
                        <h3>Stay Motivated with Friends</h3>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#featuresCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#featuresCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        
        <!-- Category Buttons -->
        <h3>Track Your Progress</h3>
        <div class="category-btns mb-4">
            <a href="/workouts" class="btn btn-danger">Workouts</a>
            <a href="/sleep-tracker" class="btn btn-info">Sleep Tracker</a>
            <a href="/body-measurements" class="btn btn-warning">Body Measurements</a>
        </div>

        <!-- Recommended Workouts with Progress -->
        <h3 class="mb-3">Recommended Workouts for You</h3>
        <div class="row">
            <% 
            const workouts = [
                { id: "highIntensity", name: "High-Intensity Workouts", color: "bg-purple", icon: "fas fa-bolt", duration: "30 min", calories: "~400 kcal", level: "Advanced" },
                { id: "strength", name: "Strength Training", color: "bg-orange", icon: "fas fa-dumbbell", duration: "45 min", calories: "~300 kcal", level: "Intermediate" },
                { id: "functionality", name: "Functionality Fitness", color: "bg-green", icon: "fas fa-running", duration: "40 min", calories: "~350 kcal", level: "Beginner" },
                { id: "cardio", name: "Cardio", color: "bg-red", icon: "fas fa-heartbeat", duration: "35 min", calories: "~500 kcal", level: "All Levels" }
            ];
            %>

            <% workouts.forEach(workout => { %>
                <div class="col-md-6">
                    <div class="card p-3 mb-3">
                        <div class="d-flex align-items-center">
                            <i class="<%= workout.icon %> fa-2x me-3 text-dark"></i>
                            <h5 class="flex-grow-1"><%= workout.name %></h5>
                            <span class="badge <%= workout.color %> text-white p-2"><%= workout.level %></span>
                        </div>
                        
                        <p class="mt-2">‚è± Duration: <%= workout.duration %> | üî• Calories Burned: <%= workout.calories %></p>


                <!-- Workout Frequency Selection -->
                <label for="<%= workout.id %>-frequency">Workout Frequency:</label>
                <select id="<%= workout.id %>-frequency" class="form-control mb-2">
                    <option>1x per week</option>
                    <option>2x per week</option>
                    <option>3x per week</option>
                    <option>Daily</option>
                </select>


                <!-- Action Buttons -->
                <div class="d-flex justify-content-between">
                    <a href="/workout-details?id=<%= workout.id %>" class="btn btn-primary">Start Now</a>
                </div>
            </div>
        </div>
    <% }) %>
    
</div>

    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
